{
  "manifest_version": 3,
  "name": "LinkedIn Game Changer Filter",
  "version": "1.0",
  "description": "Removes LinkedIn posts containing 'game changer' from your feed",
  
  "permissions": [
    "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
